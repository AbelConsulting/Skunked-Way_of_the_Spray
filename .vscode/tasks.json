{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run SkunkFU Game (JS)",
			"type": "shell",
			"command": "python",
			"args": ["-m", "http.server", "8000"],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Open JS Game in Browser",
			"type": "shell",
			"command": "start",
			"args": ["http://localhost:8000"],
			"windows": {
				"command": "cmd",
				"args": ["/c", "start", "http://localhost:8000"]
			}
		},
		{
			"label": "Sprite Smoke Test",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": [
				"toolshed/test_sprites.py"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Convert Quadrants to Horizontal",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["convert_quadrants_to_horizontal.py"]
		},
		{
			"label": "Remove Sprite Backgrounds",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["remove_sprite_backgrounds.py"]
		},
		{
			"label": "Cleanup Sprites",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["cleanup_sprites.py"]
		},
		{
			"label": "Generate Metal Sound",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["generate_metal_sound.py"]
		},
		{
			"label": "Generate Metal Guitar",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["generate_metal_sound.py"]
		},
		{
			"label": "Analyze Music Mix",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["analyze_music_mix.py"]
		},
		{
			"label": "Generate Background Music",
			"type": "shell",
			"command": "${workspaceFolder}/.venv/Scripts/python.exe",
			"args": ["generate_music.py"]
		}
	]
}