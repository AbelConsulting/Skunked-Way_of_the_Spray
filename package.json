{
  "name": "skunkfu",
  "version": "0.1.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "start": "node tools/csp_server.js",

    "serve:py": "python -m http.server 8000",

    "check:sprite-frames": "python toolshed/check_sprite_frames.py",
    "fix:sprites": "python toolshed/fix_spritesheets.py --backup --verbose",
    "extract:ninja-walk": "python toolshed/extract_ninja_walk_frames.py",
    "preview:sprites": "python toolshed/preview_sprites.py",

    "test:touch-landscape": "node tools/touch_controls_landscape_test.js",
    "test:portrait-rotate": "node tools/portrait_start_rotate_test.js",
    "test:touch-present": "node tools/touch_controls_present_on_start_test.js",
    "test:touch-immediate": "node tools/touch_controls_immediate_test.js",

    "test:mobile-perf": "node tools/mobile_performance_test.js",
    "test:mobile-probe": "node tools/mobile_probe_test.js",
    "test:mobile-diagnostics": "node tools/mobile_diagnostics.js",
    "test:mobile-diagnostics-landscape": "node tools/mobile_diagnostics_landscape.js",

    "test:mobile-all": "npm run test:touch-landscape && npm run test:portrait-rotate && npm run test:touch-present && npm run test:touch-immediate && npm run test:mobile-perf && npm run test:mobile-probe",

    "test:sprite-padding": "node tools/check_sprite_padding.js",

    "playwright:install": "npx playwright install",
    "deploy:wrangler": "npm run build && npx wrangler deploy --assets=./dist",
    "deploy:pages": "npm run build && npx wrangler pages publish ./dist --project-name \"$CF_PAGES_PROJECT\""
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "playwright": "^1.40.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0"
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.27.2"
  }
}
